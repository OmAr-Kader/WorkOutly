<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Workout.App" parent="Light">
        <item name="android:colorPrimary">@color/appPrimaryLight</item>
        <item name="android:colorPrimaryDark">@color/appPrimaryLightDark</item>
        <item name="android:colorControlNormal">@color/appPrimaryLight</item>
        <item name="android:colorForeground">@color/appPrimaryLight</item>
        <item name="android:colorAccent">@color/appAccent</item>
        <item name="android:textColorPrimary">@color/whi</item>
        <item name="android:windowBackground">@color/whi</item>
        <item name="android:statusBarColor">@color/whi</item>
        <item name="android:itemBackground">@color/whi</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/whi</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/ic_launcher_foreground
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">400</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="s">shortEdges</item>
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi" tools:targetApi="s">
            icon_preferred
        </item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowClipToOutline" tools:targetApi="s">false</item>
        <item name="android:windowElevation" tools:targetApi="s">7dp</item>
    </style>

    <style name="Light" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/bla</item>
        <item name="android:textColor">@color/bla</item>
        <!--item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item-->
        <item name="android:navigationBarColor">@color/bla</item>
        <item name="android:windowBackground">@color/whi</item>
        <item name="android:itemBackground">@color/whi</item>
    </style>

</resources>